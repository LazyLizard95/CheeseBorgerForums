<ol class="post-list">
  {{!-- {{#if post.topic.general}} --}}
  {{#each posts}}
  <li>
    <article class="post">
  <div class="title">
    <a href="/general/posts/{{id}}" target="_blank">{{title}}</a>
    <span>({{content}})</span>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/general/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>
  </li>
  {{/each}}
  {{!-- {{/if}} --}}
</ol>